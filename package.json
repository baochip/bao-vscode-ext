{
  "name": "bao-vscode-ext",
  "displayName": "Baochip",
  "description": "Develop applications for Baochip.",
  "publisher": "baochip",
  "website": "https://baochip.com",
  "version": "1.0.0",
  "icon": "media/baochip-128x128-logo-only.png",
  "license": "Apache-2.0",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/baochip/bao-vscode-ext.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "baochip",
    "precursor",
    "xous",
    "xous-core",
    "embedded",
    "development",
    "microcontroller"
  ],
  "activationEvents": [
    "onView:bao.view",
    "onStartupFinished",
    "onCommand:baochip.selectBuildChannel"
  ],
  "contributes": {
    "commands": [
      {
        "command": "baochip.openWelcome",
        "title": "Baochip: Open Welcome"
      },
      {
        "command": "baochip.openSettings",
        "title": "Baochip: Open Settings"
      },
      {
        "command": "baochip.setBootloaderSerialPort",
        "title": "Baochip: Set Bootloader Mode's Serial Port"
      },
      {
        "command": "baochip.setRunSerialPort",
        "title": "Baochip: Set Run Mode's Serial Port"
      },
      {
        "command": "baochip.setMonitorDefaultPort",
        "title": "Baochip: Set Default Monitor Port"
      },
      { 
        "command": "baochip.setMonitorBaud", 
        "title": "Baochip: Set Monitor Baud" 
      },
      { 
        "command": "baochip.monitor.open", 
        "title": "Baochip: Open Serial Monitor" 
      },
      { 
        "command": "baochip.monitor.stop", 
        "title": "Baochip: Stop Serial Monitor" 
      },
      {
        "command": "baochip.setFlashLocation",
        "title": "Baochip: Set Flash Location"
      },
      {
        "command": "baochip.selectBuildTarget",
        "title": "Baochip: Select Build Target"
      },
      {
        "command": "baochip.clean",
        "title": "Baochip: Full Clean"
      },
      {
        "command": "baochip.build",
        "title": "Baochip: Build Project"
      },
      { 
        "command": "baochip.selectApp", 
        "title": "Baochip: Select App" 
      },
      { "command": "baochip.createApp",
        "title": "Baochip: New App"
      },
      {
        "command": "baochip.flash",
        "title": "Baochip: Flash Device"
      },
      {
        "command": "baochip.buildFlashMonitor",
        "title": "Baochip: Build • Flash • Monitor"
      },
      {
        "command": "baochip.resetUvSetup",
        "title": "Baochip: Reset UV Setup"
      }
    ],
    "menus": {},
"configuration": [
    {
      "title": "Baochip — General",
      "scope": "resource",
      "properties": {
        "baochip.showWelcomeOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the Baochip Welcome page when the extension activates.",
          "order": 1
        },
        "baochip.xousCorePath": {
          "type": "string",
          "default": "",
          "description": "Path to your local xous-core checkout (folder). The extension will run tools-bao/bao.py inside it.",
          "order": 2
        }
      }
    },
    {
      "title": "Baochip — Ports",
      "scope": "resource",
      "properties": {
        "baochip.serialPortBootloader": {
          "type": "string",
          "default": "",
          "description": "Serial port that appears in bootloader / UF2 drive mode.",
          "order": 1
        },
        "baochip.serialPortRun": {
          "type": "string",
          "default": "",
          "description": "Serial port used for run mode (normal firmware logs).",
          "order": 2
        },
        "baochip.monitorDefaultPort": {
          "type": "string",
          "enum": ["run", "bootloader"],
          "default": "run",
          "description": "Which port the Monitor button uses by default.",
          "order": 3
        }
      }
    },
    {
      "title": "Baochip — Monitor",
      "scope": "resource",
      "properties": {
        "baochip.monitor.defaultBaud": {
          "type": "number",
          "default": 1000000,
          "minimum": 1,
          "description": "Default baud rate for the serial monitor.",
          "order": 1
        },
        "baochip.monitor.crlf": {
          "type": "boolean",
          "default": true,
          "description": "Use CRLF as TX line ending in line mode.",
          "order": 2
        },
        "baochip.monitor.raw": {
          "type": "boolean",
          "default": true,
          "description": "Send keystrokes immediately (raw mode).",
          "order": 3
        },
        "baochip.monitor.echo": {
          "type": "boolean",
          "default": false,
          "description": "Local echo of typed input.",
          "order": 4
        }
      }
    },
    {
      "title": "Baochip — Build",
      "scope": "resource",
      "properties": {
        "baochip.buildTarget": {
          "type": "string",
          "default": "",
          "description": "Currently selected build target (e.g., dabao, baosec).",
          "order": 1
        },
        "baochip.buildTargets": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["dabao", "baosec"],
          "description": "Fallback list if bao.py cannot list targets.",
          "order": 2
        },
        "baochip.build.cwd": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Working directory for the build.",
          "order": 3
        },
        "baochip.xousAppName": {
          "type": "string",
          "default": "",
          "description": "Name of the Bao app under xous-core/apps-dabao/. You can list multiple apps separated by spaces (e.g., 'helloworld demo_app util'), or leave blank to build the target only.",
          "order": 4
        }
      }
    },
    {
      "title": "Baochip — Flashing",
      "scope": "resource",
      "properties": {
        "baochip.flashLocation": {
          "type": "string",
          "default": "",
          "description": "Location of the mounted Baochip UF2 drive (e.g., D:\\\\ on Windows).",
          "order": 1
        }
      }
    }
  ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bao-container",
          "title": "Baochip",
          "icon": "media/bao-icon.svg"
        }
      ]
    },
    "views": {
      "bao-container": [
        {
          "id": "bao-view",
          "name": "Baochip"
        },
        {
          "id": "bao-docs",
          "name": "Documentation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "baochip.build",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p . && tsc-alias -p tsconfig.json",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.92.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.41"
  }
}
