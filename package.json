{
  "name": "bao-vscode-ext",
  "displayName": "Baochip",
  "description": "Baochip tools integration.",
  "publisher": "baochip",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:bao.view",
    "onStartupFinished",
    "onCommand:baochip.selectBuildChannel"
  ],
  "contributes": {
    "commands": [
      {
        "command": "baochip.openWelcome",
        "title": "Baochip: Open Welcome"
      },
      {
        "command": "baochip.setMonitorPort",
        "title": "Baochip: Set Monitor Port"
      },
      {
        "command": "baochip.openMonitor",
        "title": "Baochip: Monitor"
      },
      {
        "command": "baochip.setFlashLocation",
        "title": "Baochip: Set Flash Location"
      },
      {
        "command": "baochip.selectBuildTarget",
        "title": "Baochip: Select Build Target"
      },
      {
        "command": "baochip.clean",
        "title": "Baochip: Full Clean"
      },
      {
        "command": "baochip.build",
        "title": "Baochip: Build Project"
      },
      { 
        "command": "baochip.selectApp", 
        "title": "Baochip: Select App" 
      },
      { "command": "baochip.createApp",
        "title": "Baochip: New App"
      },
      {
        "command": "baochip.flash",
        "title": "Baochip: Flash Device"
      },
      { 
        "command": "baochip.flashForceAll", 
        "title": "Baochip: Flash device (force all)" 
      },
      {
        "command": "baochip.buildFlashMonitor",
        "title": "Baochip: Build • Flash • Monitor"
      }
    ],
    "menus": {},
    "configuration": {
      "title": "Baochip",
      "properties": {
        "baochip.showWelcomeOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the Baochip Welcome page when the extension activates."
        },
        "baochip.xousCorePath": {
          "type": "string",
          "default": "",
          "description": "Path to your local xous-core checkout (folder). The extension will run tools-bao/bao.py inside it."
        },
        "baochip.pythonCommand": {
          "type": "string",
          "default": "python",
          "description": "Python command to run (e.g. 'python' on Windows, 'python3' on macOS/Linux)."
        },
        "baochip.defaultBaud": {
          "type": "number",
          "default": 115200,
          "description": "Default baud for monitor."
        },
        "baochip.monitorPort": {
          "type": "string",
          "default": "",
          "description": "Default serial port (e.g., COM5 or /dev/ttyUSB0)."
        },
        "baochip.flashLocation": {
          "type": "string",
          "default": "",
          "description": "Location of the mounted Baochip UF2 drive (e.g., D:\\\\ on Windows or /Volumes/BAOBOOT on macOS/Linux)."
        },
        "baochip.buildTarget": {
          "type": "string",
          "default": "",
          "description": "Currently selected build target (e.g., dabao, baosec)."
        },
        "baochip.buildTargets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "dabao",
            "baosec"
          ],
          "description": "Fallback list if bao.py cannot list targets."
        },
        "baochip.build.cwd": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Working directory for the build. Change if the build should run in xous-core or another repo."
        },
        "baochip.xousAppName": {
          "type": "string",
          "default": "",
          "description": "Name of the Bao app workspace under xous-core/apps-dabao/ (e.g., 'helloworld')."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bao-container",
          "title": "Baochip",
          "icon": "media/bao-icon.svg"
        }
      ]
    },
    "views": {
      "bao-container": [
        {
          "id": "bao-view",
          "name": "Baochip"
        }
      ]
    },
    "keybindings": [
      {
        "command": "baochip.build",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p . && tsc-alias -p tsconfig.json",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.92.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.41"
  }
}
