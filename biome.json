{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"files": {
		"includes": ["**/*", "!node_modules", "!out", "!dist", "!coverage", "!*.vsix"]
	},
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
