{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@commands/*": ["src/commands/*"],
      "@services/*": ["src/services/*"],
      "@views/*": ["src/views/*"],
      "@panels/*": ["src/panels/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"]
}
